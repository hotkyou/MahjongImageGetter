{
    "manifest_version": 3,
    "name": "麻雀AI助手",
    "version": "1.0",
    "description": "雀魂の手牌を分析し、AIによる打牌提案を提供します。",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>",
        "*://*.tenhou.net/*",
        "*://game.mahjongsoul.com/*",
        "http://0.0.0.0:8000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*.tenhou.net/*", "*://game.mahjongsoul.com/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}